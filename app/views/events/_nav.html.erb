<span style="float:left;">
  <% if current_controller == 'happenings' %>
    <%= link_to @date.strftime("%B %Y"), happenings_path %>
  <% else %>
    <%= link_to 'Events', happenings_path %>
  <% end %>
</span>
<span class="calendar-nav" style="float:right;">
  <%= link_to "&laquo; Prev", happenings_path(:params => {:date => @date.last_month.strftime("%Y-%m") + '-01'}) %>&nbsp;
  <%= link_to "Today", happenings_path %>&nbsp;
  <%= link_to "Next &raquo;", happenings_path(:params => {:date => @date.next_month.strftime("%Y-%m") + '-01'}) %>
</span>
